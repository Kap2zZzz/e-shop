@model e_shop.Entities.AskClient
@{
    ViewBag.Title = "Контакти | м. Львів, вул. Щирецька 36 (ТВК ПІВДЕННИЙ, ТЦ ЕКСПО БУД №35) | Електро Коник";
}
@if (TempData["valid"] != null)
{
    if (TempData["valid"] == "1")
    {
        <div id="valid" class="alert alert-success">@TempData["message"]</div>
    }
}
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD5bAYAuo4DS4QrMy-dBlu99e-MDuT9AlA&callback=initMap">
</script>
<div class="page-header" style="margin-top:5px; margin-bottom:5px">
    <h3>Наші контакти:</h3>
</div>
<div class="page-header col-md-4" style="margin-top:5px;">
    <h3>
        Адреса <span class=" glyphicon glyphicon-map-marker">
        </span>
    </h3>
    <address>
        79000, м. Львів, вул. Щирецька 36 <br />
        (<strong class="text-info">ТВК ПІВДЕННИЙ, ТЦ ЕКСПО БУД № 35</strong>)<br />
        Детальне місце розташування зазначено на карті
    </address>
</div>
<div class="page-header col-md-3 col-md-offset-1" style="margin-top:5px;">
    <h3>Графік роботи <span class="glyphicon glyphicon-time"></span></h3>
    <address>
        Вівторок - Неділя, з 9:00 до 18:00<br />
        Понеділок - <span class="label label-danger">Вихідний!</span><br />
        Святкові дні - <span class="label label-success">Робочі!</span>
    </address>
</div>
<div class="page-header col-md-3 col-md-offset-1" style="margin-top:5px;">
    <h3>Телефони <span class="glyphicon glyphicon-phone"></span></h3>
    <address>
        (093)-677-93-35 - Олександр<br />
        (098)-252-32-31 - Ігор<br />
        e-mail: shop@elektrokonyk.com.ua
    </address>
</div>
<div class="row">
    <div class="col-sm-12" style="margin-top:0px">
        <h3>Місце розташування на карті</h3>
        <div id="map" style="width:100%; height:400px;"></div>
    </div>
</div>
<div class="row" id="ContactForm">
    @using (Html.BeginForm())
    {
        <div class="page-header col-sm-12" style="margin-top:0px;">
            <h3>
                Форма для контакту
            </h3>
            @if (TempData["valid"] != null)
            {
                if (TempData["valid"] == "0")
                {
                    <div id="valid" class="alert alert-danger">@TempData["message"]</div>
                }
            }
            <div class="form-group">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ваше Ім’я" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Ваш E-mail" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Ваш телефон"})
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Theme, new { @class = "form-control", placeholder = "Тема" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(x => x.Question, new { @class = "form-control", rows = 5, placeholder = "Ваше запитання ... ?" })
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-comment"></span> Відправити
                </button>
            </div>
        </div>
    }
</div>
