<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    @*<link href="~/Content/sticky-footer.css" rel="stylesheet" />*@
    <title>@ViewBag.Title</title>
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <!-- Фіксована навігаційна панель -->
    <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("ЕЛЕКТРОКОНИК", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="@ViewBag.IsActiveHome">@Html.ActionLink("Головна", "Index", "Home")</li>
                    <li class="dropdown @ViewBag.IsActiveProduct">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Каталог <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Усі товари", "List", "Product")</li>
                            <li>@Html.RouteLink("Кабель", new { controller = "Product", action = "List", category = "Кабель", page = 1 })</li>
                            <li>@Html.RouteLink("Тепла підлога", new { controller = "Product", action = "List", category = "Тепла підлога", page = 1 })</li>
                        </ul>
                    </li>
                    <li class="@ViewBag.IsActiveAbout">@Html.ActionLink("Про нас", "About", "About")</li>
                    <li class="@ViewBag.IsActiveContact">@Html.ActionLink("Контакти", "Contact", "Contact")</li>
                </ul>
                @Html.Action("Summary", "Cart")
            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>


    @*<footer class="footer">
            <div class="container">
                <p class="text-muted">Place sticky footer content here.</p>
            </div>
        </footer>*@

    <!-- JavaScript-ядро Bootstrap
    ================================================== -->
    <!-- Розміщуйте підключення JavaScript в кінці документа щоб сторінки завантажувались швидше -->
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>*@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
