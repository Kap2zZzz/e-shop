@model e_shop.Entities.Cart

<div class="navbar-right">
    @Html.ActionLink("Кошик", "Index", "Cart", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-info navbar-btn" })
</div>
<div class="navbar-text navbar-right" style="margin-right:20px">
    <b>Ваш кошик:</b>
    @Model.Lines.Sum(x => x.Quantity) товар(и),
    @Model.ComputeTotalValue().ToString("c")
</div>
