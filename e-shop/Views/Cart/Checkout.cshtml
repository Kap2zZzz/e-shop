@model e_shop.Entities.ShippingDetails
@{
    ViewBag.Title = "Оформлення замовлення";
}
<div class="container col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Оформлення замовлення</h4>
        </div>
        @using (Html.BeginForm())
        {
            <div class="panel-body">

                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
                <div class="form-group">
                    <label>Прізвище Ім'я По батькові:</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Контактний телефон:</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Місто:</label>
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Адреса доставки:</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                </div>

            </div>
            <div class="panel-footer">
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span> Оформити замовлення
                    </button>
                </div>
            </div>
        }
    </div>
</div>