<div class="col-md-12 col-md-offset-0" style="margin-top:20px">
    <div class="panel panel-default">
        <div class="panel-heading"><h4>Усі товари</h4></div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">ID</th>
                    <th>Назва</th>
                    <th>Опис</th>
                    <th class="text-right">Ціна</th>
                    <th class="text-center">Категорія</th>
                    <th class="text-center">Операція</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-right">@item.ProductID</td>
                        <td>@Html.ActionLink(item.Name, "Edit", new { item.ProductID })</td>
                        <td>@item.Description</td>
                        <td class="text-right">@item.Price.ToString("c")</td>
                        <td class="text-center">@item.Category</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete", "Admin"))
                            {
                                @Html.Hidden("ProductID", item.ProductID)
                                <input type="submit" class="btn btn-danger btn-xs" value="Видалити" />
                            }
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Додати новий товар", "Create", null, new { @class = "btn btn-primary text-right" })
        </div>
    </div>
</div>






