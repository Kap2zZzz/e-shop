@model e_shop.Models.ProductsListView

@{
    ViewBag.Title = "Продукція | Електро Коник";
    int counter = 0;
}
<style>
    #menu .glyphicon {
        margin-right: 10px;
    }
</style>
<div class="row" style="margin-bottom: 20px;">
    <div class="col-sm-4 col-md-3" id="menu">
        @Html.Action("Menu", "Nav")
    </div>
    <div class="col-sm-8 col-md-9">
        <div class="row">
            @foreach (var p in Model.Products)
            {
                @*<div class="visible-xs visible-sm">
                    @Html.Action("Menu", "Nav", new { horizontalLayout = true })
                </div>*@
                if (counter != 0 && counter % 2 == 0)
                {
                    @:</div>
                    @:<div class="row">
                }
                <div class="col-sm-12 col-md-6">
                    @Html.Partial("ProductSummary", p)
                </div>
                counter++;
            }
        </div>
    </div> 
    <div class="col-sm-12">
        <div class="btn-group pull-right">
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", "Product", new { page = x, category = Model.CurrentCategory, filter = Model.CurrentFilter }))
        </div>
    </div>
    </div>
<div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" data-dismiss="modal">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <img src="" class="imagepreview" style="width: 100%;">
            </div>
        </div>
    </div>
</div>

