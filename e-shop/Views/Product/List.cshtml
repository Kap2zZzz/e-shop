@using e_shop.Entities;
@model IEnumerable<Product>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <div>
        @foreach (var p in Model)
        {
            <div>
                <h3>@p.Name</h3>
                @p.Description
                <h4>@p.Price.ToString("c")</h4>
            </div>
        }
    </div>
</body>
</html>
