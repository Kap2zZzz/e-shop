</html>

<script>
    $(document).ready(function () {
        $("#ProductShearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();

            $("#tbProducts tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().lastIndexOf(value) > -1);
                //alert($(this).text);
                //$(this).toggle($(this).text).toggle("mark");
            });
        });
    });
</script>
